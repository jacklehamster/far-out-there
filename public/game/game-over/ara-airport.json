    },
    "from": {
      "x": 0,
      "y": 0
    },
    "to": {
      "x": 0,
      "y": 0
    }
  }],

  
  "dialog": {
    "type": "dialog",
    "fontSheet": { "type": "reference", "path": "../fonts/font-sheet.json" },
    "labels": [
      {
        "x": 1, "y": 49,
        "width": 62, "height": 20,
