{
  "type": "slideScene",
  "title": "hero",

  "onStart": [
    {
      "action": "saveStats"
    }
  ],

  "slides": [{
    "type": "slide",
    "asset": {
      "type": "image",
      "path": "hero.png"
    },
    "from": {
      "x": 0,
      "y": 0
    },
    "to": {
      "x": 0,
      "y": 0
    },
    "duration": 5
  }],
  "dialog": {
    "type": "dialog",
    "fontSheet": { "type": "reference", "path": "../fonts/font-sheet.json" },
    "labels": [
      {
        "text": "Your name is Blu. Now get out there and start your quest!",
        "x": 5, "y": 50,
        "width": 54, "height": 20,
        "box": true
      }
    ]
  },
  "onEnd": [
    ["fade", 0.5],
    ["next"]
  ],
  "music": {
    "type": "music",
    "path": "../music/boring.mp3"
  }
}